{
    "name": "XiLoRa",
    "description": "Connecting Xively and The Things Network",
    "repository": "https://github.com/embee8/ttn-xively-connector",
    "keywords": [
        "node",
        "ttn",
        "thethingsnetwork",
        "iot",
        "xively"
    ],
    "env": {
        "connectorUsername": {
            "description": "Your XiLoRa username",
            "required": true
        },
        "connectorPassword": {
            "description": "Your XiLoRa password",
            "required": true
        }
    },
    "addons": [
        {
            "plan": "heroku-postgresql:hobby-dev",
            "as": "APP_DATABASE",
            "options": {
                "version": "9.5"
            }
        }
    ],
    "buildpacks": [
        {
            "url": "https://elements.heroku.com/buildpacks/heroku/heroku-buildpack-nodejs"
        }
    ]
}